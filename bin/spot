require 'bundler'
Bundler.setup(:default)

spot_path = File.expand_path('../../lib', __FILE__)
$:.unshift(spot_path) if File.directory?(spot_path) && !$:.include?(spot_path)

require 'spontaneous/cli'
Spontaneous::Cli::Runner.start(ARGV)
